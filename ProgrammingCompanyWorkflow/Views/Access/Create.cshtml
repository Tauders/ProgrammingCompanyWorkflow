@model ProgrammingCompanyWorkflow.Models.Access

@{
    ViewBag.Title = "Добавить новый путь";
}

<h2>Добавить новый путь</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            <div class="control-label col-md-2">От какой роли</div>
            <div class="col-md-10">
                @Html.DropDownList("FromRole", null, String.Empty, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">К какой роли</div>
            <div class="col-md-10">
                @Html.DropDownList("ToRole", null, String.Empty, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("К списку путей", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
