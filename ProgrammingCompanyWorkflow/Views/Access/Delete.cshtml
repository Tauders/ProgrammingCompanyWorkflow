@model ProgrammingCompanyWorkflow.Models.Access

@{
    ViewBag.Title = "Удалить путь";
}

<h2>Удалить путь</h2>

<h3>Вы уверены, что хотите удалить этот путь?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            От какой роли
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FromRole.Name)
        </dd>
        <dt>
            От какой роли
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ToRole.Name)
        </dd>
    </dl>


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            @Html.ActionLink("К списку путей", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
