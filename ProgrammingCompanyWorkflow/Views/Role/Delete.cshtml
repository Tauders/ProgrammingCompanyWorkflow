@model ProgrammingCompanyWorkflow.Models.ApplicationRole

@{
    ViewBag.Title = "Удалить роль";
}

<h2>Удалить роль</h2>

<h3>Вы уверены, что хотите удалить роль?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название роли
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            @Html.ActionLink("К списку проектов", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
