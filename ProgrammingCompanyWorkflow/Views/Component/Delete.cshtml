@model ProgrammingCompanyWorkflow.Models.Component

@{
    ViewBag.Title = "Удаление";
}

<h2>@ViewBag.Title</h2>

<h3>Вы уверены, что хотите удалить этот компонент?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название компонента
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            @Html.ActionLink("К списку компонентов", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
