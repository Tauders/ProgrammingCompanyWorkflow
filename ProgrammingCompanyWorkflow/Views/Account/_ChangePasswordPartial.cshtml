@using Microsoft.AspNet.Identity
@model ProgrammingCompanyWorkflow.Models.ManageUserViewModel

<p>Вы вошли, как <strong>@User.Identity.GetUserName()</strong>.</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Форма изменения пароля</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="col-md-2 control-label">Старый пароль</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Новый пароль</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Ещё раз новый пароль</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Изменить пароль" class="btn btn-default" />
        </div>
    </div>
}
